<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
<!-- Add the report to the XML file responsible for reports -->
<report
       id="report_tax_invoice"
       String="Tax Invoice"
       model="account.invoice"
       report_type="qweb-pdf"
       name="accounting.report_taxinvoice"
       file="account.report_taxinvoice"
	   paperformat="accounting.paper_format_tax_invoice"/>

	<!--setting paper format for report-->
    <record id="paper_format_tax_invoice" model="report.paperformat">
	<field name="name">Tax Invoice</field>
	<field name="default" eval="True" />
	<field name="format">A4</field>
	<field name="page_height">0</field>
	<field name="page_width">0</field>
	<field name="orientation">Portrait</field>
 	<field name="margin_top">10</field>
 	<field name="margin_bottom">10</field>
	<field name="margin_left">5</field>
	<field name="margin_right">5</field>
	<field name="header_line" eval="False" />
	<field name="header_spacing">3</field>
	<field name="dpi"></field>
	</record>

	<!-- binding paper format with qweb report -->
	<record id="account.report_tax_invoice" model="ir.actions.report.xml">
		<field name="paper_format_tax_invoice" ref="account.paper_format_tax_invoice" />
	</record>
 </odoo>
